 <%= render "shared/content_header", title: "Enlaces de interés" do %>
    <%= render "shared/button_link", text: "Agregar",
                                    path: new_link_path %>
  <% end %>

<table class="table mt-4">
  <thead>
    <tr>
      <th>Título</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
     <% turbo_frame_tag "links"%>   
      <% @links.each do |link| %>
        <%= content_tag :tr, id: dom_id(link) do %>
          <td><%= link.title %></td>
          <td class="d-flex justify-content-evenly align-items-center">
            <!-- Ver enlace -->
            <%= link_to link.url, target: "_blank" do %>
              <i class="fas fa-eye"></i> 
            <% end %>
            <!-- Editar enlace (admin only) -->
            <% if current_user.admin? %>
              <%= link_to edit_link_path(link), data: { turbo_frame: "remote_modal" } do %>
                <i class="fas fa-edit"></i> 
              <% end %>
              <!-- Eliminar enlace -->
              <%= button_to link_path(link), class: "btn btn-sm", method: :delete, form: { data: { turbo_confirm: "¿Estás seguro?" } } do %>
                <i class="fas fa-trash text-danger"></i> 
              <% end %>
            <% end %>
          </td>
        <% end %>
        <% end %>
     <%end%>
  </tbody>
</table>

