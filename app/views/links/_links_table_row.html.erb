<%= content_tag :tr, id: dom_id(link), class: "align-items-stretch" do %>
  <td class="align-middle"><%= link_to link.title, link.url, target: "_blank" %></td>
  <td class="align-middle">
    <div class="d-flex justify-content-center align-items-center h-100">
      <% if current_user.admin? %>
        <%= link_to edit_link_path(link), class: "btn btn-sm text-primary", data: { turbo_frame: "remote_modal" } do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= button_to link_path(link), class: "btn btn-sm", method: :delete, form: { data: { turbo_confirm: "¿Estás seguro?" } } do %>
          <i class="fas fa-trash text-danger"></i>
        <% end %>
      <% end %>
    </div>
  </td>
<% end %>
