<%= simple_form_for location_equipment do |f| %>
  <% %i[last_service next_service last_battery_change next_battery_change].each do |attribute| %>
    <%= f.input attribute, label: LocationEquipment.human_attribute_name(attribute),
                           discard_day: true %>
    <% if attribute.eql? :next_service%>
      <hr>
    <% end %>
  <% end %>
  <%= f.button :submit, "Aceptar", class: "btn btn-success" %>
<% end %>