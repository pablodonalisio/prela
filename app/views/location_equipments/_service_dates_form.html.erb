<%= simple_form_for location_equipment do |f| %>
  <%= f.input :last_service, label: LocationEquipment.human_attribute_name(:last_service),
                              as: :date, end_year: Date.today.year - 90,
                              start_year: Date.today.year, discard_day: true,
                              order: [:month, :year], include_blank: true %>
  <%= f.input :next_service, label: LocationEquipment.human_attribute_name(:next_service),
                              as: :date, end_year: Date.today.year + 90,
                              start_year: Date.today.year, discard_day: true,
                              order: [:month, :year], include_blank: true %>
  <%= f.input :last_battery_change, label: LocationEquipment.human_attribute_name(:last_battery_change),
                                    as: :date, end_year: Date.today.year - 90,
                                    start_year: Date.today.year, discard_day: true,
                                    order: [:month, :year], include_blank: true %>
  <%= f.input :next_battery_change, label: LocationEquipment.human_attribute_name(:next_battery_change),
                                    as: :date, end_year: Date.today.year + 90,
                                    start_year: Date.today.year, discard_day: true,
                                    order: [:month, :year], include_blank: true %>
  <%= f.button :submit, "Aceptar", class: "btn btn-success" %>
<% end %>