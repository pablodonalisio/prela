<%= turbo_frame_tag location_equipment do %>
  <div class="card mb-3 bg-secondary">
    <div class="row g-0">
      <div class="card-body">
        <div class="d-flex">
          <h5 class="card-title me-auto"><%= location_equipment.equipment.brand %> - <%= location_equipment.equipment.model %></h5>
          <%= render "shared/dropdown" do %>
            <%= render "shared/button_box", edit_path: edit_location_equipment_path(location_equipment),
                                            delete_path: location_equipment_path(location_equipment),
                                            confirm: "Seguro queres borrar este equipo?" %>
          <% end %>
        </div>
        <p class="card-text"><%= location_equipment.location.client.name %> - <%= location_equipment.location.name %></p>
        <div class="container p-0">
          <div class="row">
            <div class="col-lg-6">
              <p class="card-text m-0">
                <small class="text-body-secondary">
                  Sala: <%= location_equipment.zone %> - Piso: <%= humanize_floor(location_equipment.floor) %>
                </small>
              </p>
              <p class="card-text m-0">
                <small class="text-body-secondary">Numero de serie: <%= location_equipment.serial_number %></small>
              </p>
            </div>
            <div class="col-lg-6">
              <p class="card-text m-0">
                <small class="text-body-secondary">
                  Service: <%= "Ultimo #{location_equipment.last_service} | Prox #{location_equipment.next_service}" %>
                </small>
              </p>
              <p class="card-text m-0">
                <small class="text-body-secondary">
                  Cambio bater√≠a: <%= "Ultimo #{location_equipment.last_battery_change} | Prox #{location_equipment.next_battery_change}" %>
                </small>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>