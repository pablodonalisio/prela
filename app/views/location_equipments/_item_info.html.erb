<div class="mb-2">
  <p class="card-text text-truncate mb-0">
    <small>
      <%= item.client.name %> - <%= item.location.name %>
    </small>
  </p>
  <p class="card-text text-truncate m-0">
    <small class="text-body-secondary">
      Sala: <%= item.zone %>
    </small>
  </p>
  <p class="card-text text-truncate m-0">
    <small class="text-body-secondary">
      Piso: <%= humanize_floor(item.floor) %>
    </small>
  </p>
  <p class="card-text text-truncate m-0">
    <small class="text-body-secondary">
      Estado: <%= item.status ? t("activerecord.attributes.location_equipment.statuses.#{item.status}") : "" %>
    </small>
  </p>
</div>
<div class="mb-2" style="height: 72px">
  <% item.next_service_dates.each do |service_date| %>
    <p class="card-text m-0 text-truncate">
      <small class="text-body-secondary">
        <label><%= LocationEquipment.human_attribute_name(service_date) %>: </label>
        <span class="<%= service_date_color(item.send(service_date)) %>">
          <%= l(item.send(service_date), format: :month_year_concise) if item.next_service %>
        </span>
      </small>
    </p>
  <% end %>
</div>
