<div class="accordion-item">
  <h2 class="accordion-header">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= collapse %>" aria-expanded="false" aria-controls="<%= collapse %>">
      <%= title %>
      <% if overdue_services.present? %>
        <i class="fa fa-circle fa-2xs mx-2 text-danger" aria-hidden="true"></i>
        (<%= overdue_services.count %>)
      <% else %>
        <i class="fa fa-circle fa-2xs mx-2 text-success" aria-hidden="true"></i>
      <% end %>
    </button>
  </h2>
  <div id="<%= collapse %>" class="accordion-collapse collapse" data-bs-parent="#locationEquipmentsControl">
    <div class="accordion-body overflow-auto" style="max-height:300px;">
      <% if overdue_services.blank? %>
        <p class="text-center">No hay servicios vencidos</p>
      <% else %>
        <ul class="list-group">
          <% overdue_services.each do |overdue_service| %>
            <li class="list-group-item">
              <p class="d-flex justify-content-between align-items-center">
                <%= link_to "#{overdue_service.location_equipment.model.capitalize} - #{overdue_service.location_equipment.location.name}", location_equipment_path(overdue_service.location_equipment), data: { turbo_frame: :_top}%>
                <% if overdue_service.date < Date.today  %>
                  <span class="badge bg-danger rounded-pill">Vencido</span>
                <% else %>
                  <span class="badge bg-warning rounded-pill">Vence pronto</span>
                <% end %>
              </p>
              <p class="m-0 fw-lighter" style="font-size: 0.8rem;">Cliente: <%= overdue_service.location_equipment.client.name %></p>
              <p class="m-0 fw-lighter" style="font-size: 0.8rem;">Tipo: <%= ServiceDate.human_attribute_name(overdue_service.kind) %></p>
              <p class="m-0 fw-lighter" style="font-size: 0.8rem;">Fecha: <%= overdue_service.date.strftime("%d/%m/%Y") %></p>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>