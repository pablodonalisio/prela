<div class="align-items-center list-group-item list-group-item-action">
  <%= link_to client_path(client), data: { turbo_frame: "_top" },
                                   class: "flex-grow-1 text-center text-light link-underline-dark" do %>
    <div class="d-flex w-100 align-items-center" style="height: 70px;">
      <% if client.avatar.attached? %>
        <%= image_tag client.avatar.variant(resize_to_limit: [50, 50]) %>
      <% else %>
        <%= client.name %>
      <% end %>

      <div class="dropdown">
        <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <span class="navbar-toggler-icon"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to(
              "Editar",
              edit_client_path(client),
              class: "dropdown-item text-center",
              data: { turbo_frame: "remote_modal" }
            ) %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>