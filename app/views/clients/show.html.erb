<div class="container mt-3">
  <%= turbo_frame_tag "client_#{@client.id}" do %>
    <%= render @client %>

    <div>
      <%= link_to "Editar cliente", edit_client_path(@client), class: "link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %> |
      <%= link_to "Volver al listado", clients_path, class: "link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>

      <%= button_to @client, method: :delete, class: "btn btn-danger mt-2" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  <% end %>
</div>