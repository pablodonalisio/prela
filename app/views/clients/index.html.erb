<div class="container">
  <div class="d-flex justify-content-between mx-4 mt-5 align-items-center">
    <h2 class="m-0">Clientes</h2>
    <%= link_to "Agregar", new_client_path,
                          class: "btn btn-primary text-uppercase h-100 font-monospace",
                          style: "font-size: 0.8rem !important;",
                          data: {
                            turbo_frame: "remote_modal"
                          } %>
  </div>

  <%= turbo_frame_tag "clients", class: "list-group mt-5 col-6 col-md-4 mx-auto" do %>
    <%= render @clients%>
  <% end %>
</div>
