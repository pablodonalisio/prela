<div class="bg-secondary">
  <div class="mt-3 d-none d-md-block"></div>
  <% if current_user.admin? %>
    <nav class="nav nav-pills nav-justified flex-md-column">
      <% sidebar_links.each do |link| %>
        <%= link_to link[:path], class: "nav-link text-white #{active_class(link[:path])} d-md-flex align-items-center" do %>
          <i class="fa-solid <%= link[:icon] %> mx-3"></i>
          <p class="m-0 fs-6 fs-sm-6"><%= link[:text] %></p>
        <% end %>
      <% end %>
    </nav>
    <hr class="d-none d-md-block">
  <% end %>

  <% if @filter_params %>
    <button class="btn btn-primary d-md-none"
            style="position: fixed; bottom: 70px; right: 30px; z-index: 2"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#filters"
            aria-controls="filters">
      <i class="fa-solid fa-filter"></i>
    </button>

    <div class="offcanvas-md offcanvas-start px-3" tabindex="-1" id="filters" aria-labelledby="filtersLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="filtersLabel">Filtros</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#filters" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <%= render "filter_form", filter_params: @filter_params, order: @order%>
      </div>
    </div>
  <% end %>
</div>
