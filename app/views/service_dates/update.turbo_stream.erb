<%= turbo_stream.update "flash" do %>
  <%= render "layouts/flash"%>
<% end %>

<%= turbo_stream.update @service_date do %>
  <span class="<%= service_date_color(@service_date.date) %>">
    <%= l(@service_date.date.to_date, format: :month_year_concise) %>
  </span>
  <% if current_user.admin? %>
    <%= link_to edit_service_date_path(@service_date), class: "ms-2" do %>
      <i class="fas fa-edit"></i>
    <% end %>
  <% end %>
<% end %>
