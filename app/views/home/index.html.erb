<h1>Enlaces de Interés</h1>

<%= link_to "Nueva URL", new_link_path, class: "btn btn-success" %>
<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @links.each do |link| %>
      <%= content_tag :tr, id: dom_id(link) do %>
        <td><%= link.title %></td>
        <td class="d-flex justify-content-evenly align-items-center">
          <!-- Ver enlace -->
          <%= link_to link.url, target: "_blank", class: "btn btn-sm btn-primary" do %>
            <i class="fas fa-eye"></i> 
          <% end %>
          <!-- Editar enlace (admin only) -->
          <% if current_user.admin? %>
            <%= link_to edit_link_path(link), class: "btn btn-sm btn-warning ms-2", data: { turbo_frame: "remote_modal" } do %>
              <i class="fas fa-edit"></i> 
            <% end %>
            <!-- Eliminar enlace -->
            <%= button_to link_path(link), class: "btn btn-sm btn-danger ms-2", method: :delete, form: { data: { turbo_confirm: "¿Estás seguro?" } } do %>
              <i class="fas fa-trash"></i> 
            <% end %>
          <% end %>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>

