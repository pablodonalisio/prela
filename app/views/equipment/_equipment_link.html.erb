<%= turbo_frame_tag equipment_link do %>
  <div class="card bg-secondary">
    <div class="card-body d-flex">
      <%= link_to "#{equipment_link.brand.upcase} #{equipment_link.model.upcase}", equipment_path(equipment_link),
                                                                                   class: "me-auto text-white link-underline-secondary",
                                                                                   data: { turbo_frame: "_top" } %>
      <%= render "shared/dropdown" do %>
        <%= render "shared/button_box", edit_path: edit_equipment_path(equipment_link),
                                        delete_path: equipment_path(equipment_link),
                                        confirm: "Seguro queres borrar el Equipo?" %>
      <% end %>
    </div>
  </div>
<% end %>