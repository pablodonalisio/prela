<div class="container">
  <%= link_to :back do %>
    <i class="fa-solid fa-chevron-left mb-3"></i>
  <% end %>
  <% equipment.attributes.each do |attribute, value| %>
    <% next if %w[id created_at updated_at].include? attribute %>
    <div class="mb-3">
      <p>
        <strong class="text-bg-primary p-1 rounded me-2">
          <%=  Equipment.human_attribute_name(attribute) %>
        </strong>
        <% if attribute.eql?("manual") && value.present?  %>
          <%= link_to "ver", value, target: "_blank" %>
        <% else %>
          <%= value %>
        <% end %>
      </p>
    </div>
  <% end %>
</div>